########################################
# Cloud configuration
########################################

cloud_id  = "your-cloud-id"
folder_id = "your-folder-id"

default_zone = "ru-central1-a"
default_cidr = ["10.0.1.0/24"]

vpc_name = "develop"

########################################
# SSH configuration
########################################

# Example public key (replace with your own)
# vms_ssh_public_root_key = "ssh-ed25519 AAAA... user@host"

########################################
# Service account key
########################################

service_account_key_file = "/path/to/your/service-account-key.json"

########################################
# Metadata (example)
########################################

metadata = {
  serial-port-enable = "1"
  ssh-keys           = "ubuntu:ssh-ed25519 AAAA... user@host"
}

########################################
# VM resources (example)
########################################

vms_resources = {
  web = {
    cores         = 2
    memory        = 2
    core_fraction = 50
    hdd_size      = 10
    hdd_type      = "network-hdd"
  }

  db = {
    cores         = 2
    memory        = 2
    core_fraction = 20
    hdd_size      = 10
    hdd_type      = "network-ssd"
  }
}
